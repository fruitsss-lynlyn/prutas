@page
@model AttendanceSystem.Pages.Students.StudentLoginModel
@{
    ViewData["Title"] = "Student Login";
}

<style>
    body {
        background: linear-gradient(to bottom right, #b8f1b0, #2e7d32); 
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        height: 150vh;
    }

    .login-container {
        background-color: white;
        max-width: 400px;
        margin: 80px auto;
        padding: 40px 30px;
        border-radius: 15px;
        box-shadow: 0px 4px 15px rgba(0,0,0,0.2);
        text-align: center;
    }

    h2 {
        color: #1b5e20;
        margin-bottom: 25px;
        font-weight: 600;
    }

    label {
        font-weight: 500;
        color: #333;
        text-align: left;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ccc;
        padding: 10px;
        width: 100%;
        transition: 0.3s;
    }

    .form-control:focus {
        border-color: #2e7d32;
        box-shadow: 0 0 5px rgba(46, 125, 50, 0.3);
    }

    .btn-primary {
        background-color: #2e7d32;
        border: none;
        border-radius: 10px;
        padding: 10px;
        font-size: 16px;
        font-weight: 500;
        transition: 0.3s;
    }

    .btn-primary:hover {
        background-color: #1b5e20;
    }

    a {
        color: #2e7d32;
        text-decoration: none;
        font-weight: 500;
    }

    a:hover {
        text-decoration: underline;
    }

    .text-danger {
        color: #d32f2f;
        font-weight: 500;
    }

    p {
        margin-top: 20px;
    }
</style>

<div class="login-container">
    <h2>Student Login</h2>

    <form method="post">
        <div class="form-group mb-3">
            <label>Email</label>
            <input asp-for="Input.Email" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Student Number</label>
            <input asp-for="Input.StudentNumber" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Password</label>
            <input asp-for="Input.Password" type="password" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary w-100">Login</button>

        <p>
            Not registered yet? <a asp-page="/Students/StudentRegister">Register here</a>
        </p>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="text-danger mt-3">@Model.ErrorMessage</div>
        }
    </form>
</div>

