@page
@model AttendanceSystem.Pages.IndexModel
@{
    ViewData["Title"] = "Attendance System";
}


<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

<style>
    
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(rgba(0, 100, 0, 0.6), rgba(144, 238, 144, 0.6)),
        url('/image/cdm.jpg') no-repeat center center fixed;
        background-size: cover;
    }


    .logo {
        position: absolute;
        top: 20px;
        left: 30px;
    }

    .overlay {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        min-height: 100vh;
        padding: 60px;
    }

    .left-side {
        flex: 1;
        text-align: left;
        color: #000;
        padding-left: 80px;
    }

    .right-side {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .top-row {
        display: flex;
        justify-content: center;
        gap: 40px;
    }

    .role-card {
        border: 1px solid #ccc;
        border-radius: 12px;
        padding: 30px;
        width: 230px;
        text-align: center;
        background-color: rgba(255, 255, 255, 0.85);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        .role-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }

        .role-card:active {
            transform: scale(0.95);
        }

   
    h1 {
        font-family: 'Poppins', sans-serif;
        font-size: 45px;
        font-weight: 700;
        color: white;
        margin-bottom: 10px;
        text-align: left;
        margin-left: 0;
        padding-left: 0;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.4);
    }


    h3 {
        font-family: 'Poppins', sans-serif;
        font-size: 20px;
        color: black;
        margin-top: 0;
    }

    p {
        font-family: 'Poppins', sans-serif;
        font-size: 15px;
        color: #333;
    }
</style>

<div class="logo">
    <img src="~/image/logo.png" alt="CDM Logo" style="width:80px; border-radius:10px;" />
</div>

<div class="overlay">
    <div class="left-side">
        <h1>Welcome to Attendance System</h1>
        <h3>Proceed as?</h3>
    </div>

    <div class="right-side">
        <div class="top-row">

            <!-- Admin -->
            <div class="role-card">
                <h2>Admin</h2>
                <p>Administrator login</p>
                <a asp-page="/Admin/AdminLogin" class="btn btn-dark" style="width:100%;">Proceed as Admin</a>
            </div>

            <!-- Student -->
            <div class="role-card">
                <h2>Student</h2>
                <p>Login or register as student</p>
                <a asp-page="/Students/StudentLogin" class="btn btn-primary" style="width:100%;">Proceed as Student</a>
            </div>
        </div>

        <!-- Visitor below -->
        <div class="role-card">
            <h2>Visitor</h2>
            <p>Log your visit</p>
            <a asp-page="/Visitors/AddVisitor" class="btn btn-success" style="width:100%;">Proceed as Visitor</a>
        </div>
    </div>
</div>
